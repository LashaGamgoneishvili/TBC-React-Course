{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/Header.tsx",
    "components/logoutbtn.tsx",
    "app/api/login/route.tsx",
    "app/api/logout/route.tsx",
    "components/LoginForm.tsx",
    "components/DebounceSearchComponent.tsx",
    "app/i18n.ts",
    "app/[locale]/login/page.tsx",
    "i18nConfig.jsx",
    "components/TranslationsProvider.jsx",
    "components/LanguageChanger.tsx",
    "app/[locale]/login/layout.tsx",
    "i18nConfig.js"
  ],
  "exclude": ["node_modules"]
}
